// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuarios {
  id                                Int @id @default(autoincrement())
  nombre                            String
  usuario                           String
  correo                            String? @unique
  password                          String
}

model Paciente {
  id                                Int @id @default(autoincrement())
  nombre                            String
  edad                              String
  correo                            String? @unique
  telefono                          String

  citas Citas[]
  @@map("pacientes")
}

model Medicos {
  id                                Int @id @default(autoincrement())
  nombre                            String
  especialidad                      String
  correo                            String? @unique

  citas Citas[]
  @@map("medicos")
}

model Citas {
  id                                Int @id @default(autoincrement())
  fecha_hora                        String

  idPaciente                        Int
  paciente Paciente @relation(fields: [idPaciente], references: [id])
  
  idMedico                          Int
  medico Medicos @relation(fields: [idMedico], references: [id])

  observaciones                 String    @db.Text

  @@map("citas")
}